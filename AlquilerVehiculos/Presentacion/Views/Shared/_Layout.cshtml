<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Presentacion</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.datatables.net/2.2.2/css/dataTables.dataTables.css">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="/css/styles.css" rel="stylesheet" />
    <link href="/css/ThemeStyles.css" rel="stylesheet" />
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand ps-3" href="index.html">Alquiler Vehículo</a>
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle"><i class="fas fa-bars"></i></button>

       
        <div class="ms-auto me-2">
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user fa-fw"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="#!">Settings</a></li>
                        <li><a class="dropdown-item" href="#!">Activity Log</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item" asp-area="" asp-controller="Acceso" asp-action="LogIn">Cerrar Sesión</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">

                        <div class="sb-sidenav-menu-heading">Gestión</div>
                        <a class="nav-link" asp-area="" asp-controller="Acceso" asp-action="LogIn">Cerrar Sesión</a>
                        <a class="nav-link" asp-area="" asp-controller="Vehiculo" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-car"></i></div>
                            Vehículos
                        </a>
                        <a class ="nav-link" asp-area="" asp-controller="Cliente" asp-action="Index">

                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Clientes
                        </a>
                        <a class="nav-link" asp-area="" asp-controller="Empleado" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-user-tie"></i></div>
                            Empleados
                        </a>
                        <a class="nav-link" asp-area="" asp-controller="Reserva" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-calendar-check"></i></div>
                            Reservas
                        </a>
                        <a class="nav-link" asp-area="" asp-controller="Pago" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-credit-card"></i></div>
                            Pagos
                        </a>
                        <a class="nav-link" asp-area="" asp-controller="Seguro" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-shield-alt"></i></div>
                            Seguros
                        </a>

                        <button class="btn btn-outline-primary nav-link" id="toggleTheme">
                            <span id="themeIcon">🌙</span> Cambiar Tema
                        </button>
                    </div>
                </div>
                <div class="sb-sidenav-footer" >
                    <div class="small">Logged in as:</div>
                    Alquiler Vehículo
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                @RenderBody();
            </main>
            <footer class="py-4 bg-light mt-auto" id="footer-layaut">
                <div class="container-fluid px-4 text-center">
                    <div class="d-flex align-items-center justify-content-center small">
                        <div>Alquiler Vehículo - Sistema de Gestión</div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/2.2.2/js/dataTables.js"></script>
	<script src="~/js/helpers/ThemeHelper.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/scripts.js"></script>
</body>
</html>
